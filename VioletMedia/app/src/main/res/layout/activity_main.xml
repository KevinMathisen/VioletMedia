<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="216dp"
        android:layout_height="96dp"
        android:layout_marginTop="28dp"
        android:gravity="center"
        android:text="VioletMedia"
        android:textColor="@color/black"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.183"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnNewVideo"
        android:layout_width="300dp"
        android:layout_height="90dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="@color/background2"
        android:text="New Video"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:cornerRadius="20dp"
        app:layout_constraintStart_toStartOf="@+id/btnStoredVideo"
        app:layout_constraintTop_toBottomOf="@+id/btnStoredVideo" />

    <Button
        android:id="@+id/btnStoredVideo"
        android:layout_width="300dp"
        android:layout_height="90dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="@color/background2"
        android:text="Your Videos"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.098" />

    <Button
        android:id="@+id/btnSettings"
        android:layout_width="300dp"
        android:layout_height="67dp"
        android:layout_marginTop="64dp"
        android:backgroundTint="@color/backgroundLight2"
        android:text="About"
        android:textColor="@color/black"
        android:textColorLink="@color/backgroundLight2"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/btnNewVideo"
        app:layout_constraintTop_toBottomOf="@+id/btnNewVideo" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="94dp"
        android:layout_height="100dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.164"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

</androidx.constraintlayout.widget.ConstraintLayout>